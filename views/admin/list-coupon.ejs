<%- include('../layouts/adminheader.ejs') %>
  <%- include('../layouts/admin_nav.ejs') %>

    <div class="container-xxl flex-grow-1 container-p-y">
      <h4 class="fw-bold py-3 mb-4">Coupon list</h4>

      <!-- Basic Bootstrap Table -->
      <div class="card">
        <br>
        <div class="table-responsive text-nowrap">
          <table class="table">
            <thead>
              <tr>
                <th>ID</th>
                <th>name</th>
                <th>Discount price</th>
                <th>min amount</th>
                <th>Percentage</th>
                <th>expiry date</th>
                <th>code</th>
                <th>Used</th>
                <th>Status</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% if(coupon.length> 0){
                coupon.forEach((x,value) => {

                %>

                <tr id="reloadDiv">
                  <td><i class="fab fa-angular fa-lg text-danger me-3"></i>
                    <strong>
                      <%= value+1 %>
                    </strong>
                  </td>

                  <td><strong>
                      <%= x.coupon_name %>
                    </strong></td>
                  <td>
                    <%= x.maxdiscountprice %>
                  </td>
                  <td>
                    <%= x.min_amount %>
                  </td>
                  <td>
                    <%= x.discountpercentage %> %
                  </td>
                  <td>
                    <%= x.expiry_date.toLocaleDateString() %>
                  </td>
                  <td>
                    <%= x.code %>
                  </td>
                  <td>
                    <%= x.used.length %>
                  </td>
                  <td>
                    <% if(x.active==true ) {%>
                      <button class="btn btn-danger" onclick="coupon_active('<%= x._id %>', false)">de-act</button>
                      <% }else{ %>
                        <button class="btn btn-info" onclick="coupon_active('<%= x._id %>', true )"> active </button>
                        <% } %>
                  </td>
                  <td>
                    <div class="dropdown">
                      <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                        <i class="bx bx-dots-vertical-rounded"></i>
                      </button>
                      <div class="dropdown-menu">
                        <a class="dropdown-item" href="/admin/edit-coupon?id=<%= x._id %>"><i
                            class="bx bx-edit-alt me-1"></i> Edit</a>
                        <button class="btn btn-danger" onclick="delete_coupon('<%= x._id %>')">
                          <i class="bx bx-trash me-1"></i> Delete</button>


                      </div>
                    </div>
                  </td>
                </tr>

                <% } ) } else{ %>
                  <tr>
                    <td colspan="5">Coupon not found</td>
                  </tr>
                  <% } %>
            </tbody>

            <!-- <td><span class="badge bg-label-success me-1">Completed</span></td>
                        
                        <td><span class="badge bg-label-info me-1">Scheduled</span></td>
                       
                        <td><span class="badge bg-label-warning me-1">Pending</span></td> -->

          </table>
        </div>
      </div>
    

      <hr class="my-5" />




    <script>

      function delete_coupon(coupid) {

        Swal.fire({
          title: 'Are you sure?',
          text: "You wan't to delete!",
          icon: 'warning',
          showCancelButton: true,
          confirmButtonColor: '#3085d6',
          cancelButtonColor: '#d33',
          confirmButtonText: 'yes, delete!'
        }).then((result) => {
          if (result.isConfirmed) {
            $.ajax({
              url: "/admin/delete-coupon",
              data: {
                couponid: coupid
              },
              method: 'post',
              success: (response) => {
                $('#reloadDiv').load('admin/list-coupon #reloadDiv')
                console.log(response);
                Swal.fire({
                  title: 'deleted!',
                  text: 'Your deleted',
                  icon: 'success',
                  showConfirmButton: false
                })

              }

            })
          }
        })
      }

      function coupon_active(coupid, value) {
        $.ajax({
          url: "/admin/coupon_active",
          data: {
            coupid,
            value
          },
          method: 'post',
          success: (response) => {
            $('#reloadDiv').load('admin/list-coupon #reloadDiv')
          }
        })
      }

    </script>

    <%- include('../layouts/adminfooter.ejs') %>