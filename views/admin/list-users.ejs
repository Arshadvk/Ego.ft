<%- include('../layouts/adminheader.ejs') %>
  <%- include('../layouts/admin_nav.ejs') %>


    <div class="container-xxl flex-grow-1 container-p-y">
      <h4 class="fw-bold py-3 mb-4">Userlist</h4>

      <!-- Basic Bootstrap Table -->
      <div class="card">
        <br>
        <div class="table-responsive text-nowrap">
          <table class="table">
            <thead>
              <tr>
                <th>ID</th>
                <th>Users</th>
                <th>Number</th>
                <th>Email</th>
                <th>Status</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% if(users.length> 0){

                for(let i=0; i<users.length; i++){ %>

                  <tr>
                    <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>
                        <%= i+1 %>
                      </strong></td>
                    <td><strong>
                        <%= users[i].name %>
                      </strong></td>
                    <td>
                      <%= users[i].number %>
                    </td>
                    <td>
                      <%= users[i].email %>
                    </td>
                    <% if(users[i].status==true){ %>
                      <td><span class="badge bg-label-primary me-1">Active</span></td>
                      <% }else{ %>
                        <a href="admin/unblock-user">
                          <td><span class="badge bg-label-warning me-1">Blocked</span></td>
                        </a>
                        <% } %>

                          <td>
                            <div class="dropdown">
                              <button type="button" class="btn p-0 dropdown-toggle hide-arrow"
                                data-bs-toggle="dropdown">
                                <i class="bx bx-dots-vertical-rounded"></i>
                              </button>

                              <div class="dropdown-menu">
                                <% if(users[i].is_admin==0){ %>
                                  <a class="dropdown-item" href="/admin/delete-user?id=<%= users[i]._id %>"><i
                                      class="bx bx-trash me-1"></i> Delete</a>
                                  <% if(users[i].status==true){ %>
                                    <a class="dropdown-item" href="/admin/block-user?id=<%= users[i]._id %>"><i
                                        class="bx bx-block me-1"></i> block</a>

                                    <% }else{ %>

                                      <a class="dropdown-item" href="/admin/unblock-user?id=<%= users[i]._id %>">
                                        <i class="bx bxs-user-account me-1"></i> unblock</a>

                                      <% }} %>
                              </div>
                            </div>
                          </td>
                  </tr>

                  <% } } else{ %>
                    <tr>
                      <td colspan="5">user not found</td>
                    </tr>
                    <% } %>
            </tbody>

            <!-- <td><span class="badge bg-label-success me-1">Completed</span></td>
                        
                        <td><span class="badge bg-label-info me-1">Scheduled</span></td>
                       
                        <td><span class="badge bg-label-warning me-1">Pending</span></td> -->

          </table>
        </div>
      </div>
      <!--/ Basic Bootstrap Table -->

      <hr class="my-5" />




      <!-- / Content -->

      <!-- Footer -->
      <footer class="content-footer footer bg-footer-theme">
        <div class="container-xxl d-flex flex-wrap justify-content-between py-2 flex-md-row flex-column">

          Â©
          <script>
            document.write(new Date().getFullYear());
          </script>
          ego.ft
        </div>
      </footer>
      <!-- / Footer -->

      <div class="content-backdrop fade"></div>
    </div>
    <!-- Content wrapper -->
    </div>
    <!-- / Layout page -->
    </div>

