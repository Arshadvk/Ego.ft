<%- include('../layouts/adminheader.ejs') %>
  <%- include('../layouts/admin_nav.ejs') %>


    <div class="container-xxl flex-grow-1 container-p-y">
      <h4 class="fw-bold py-3 mb-4">Category List</h4>

      <!-- Basic Bootstrap Table -->
      <div class="card">
        <br>
        <div class="table-responsive text-nowrap">
          <table class="table">
            <thead>
              <tr>
                <th>ID</th>
                <th>Product</th>
                <th>description </th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% if(category.length> 0){

                for(let i=0; i<category.length; i++){ %>

                  <tr>
                    <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>
                        <%= i+1 %>
                      </strong></td>
                    <td><strong>
                        <%= category[i].category_name %>
                      </strong></td>
                    <td>
                      <%= category[i].description %>
                    </td>
                    <td><img src="/product_img/<%= category[i].image %>" alt="" style="width: 50px; height: 50px;"></td>


                    <td>
                      <div class="dropdown">
                        <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                          <i class="bx bx-dots-vertical-rounded"></i>
                        </button>
                        <div class="dropdown-menu">
                          <a class="dropdown-item" href="/admin/edit-category?id=<%= category[i]._id %>"><i
                              class="bx bx-edit-alt me-1"></i> Edit</a>
                          <a class="dropdown-item" href="/admin/delete-category?id=<%= category[i]._id %>"><i
                              class="bx bx-trash me-1"></i> Delete</a>
                        </div>
                      </div>
                    </td>
                  </tr>

                  <% } } else{ %>
                    <tr>
                      <td colspan="5">Category not found</td>
                    </tr>
                    <% } %>
            </tbody>

            <!-- <td><span class="badge bg-label-success me-1">Completed</span></td>
                        
                        <td><span class="badge bg-label-info me-1">Scheduled</span></td>
                       
                        <td><span class="badge bg-label-warning me-1">Pending</span></td> -->

          </table>
        </div>
      </div>
      <!--/ Basic Bootstrap Table -->

      <hr class="my-5" />




      <!-- / Content -->

      <!-- Footer -->
      <footer class="content-footer footer bg-footer-theme">
        <div class="container-xxl d-flex flex-wrap justify-content-between py-2 flex-md-row flex-column">

